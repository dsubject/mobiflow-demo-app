<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.Theme.PlainText" parent="android:TextAppearance.Theme">
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/txtGeneral</item>
        <item name="android:textSize">@dimen/defaultFontSize</item>
    </style>

    <style name="toggleGeneral">
        <item name="android:background">@drawable/selector_togglebtn_general</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- splash -->
    <style name="splashBox">
        <item name="android:background">@drawable/bkg</item>
    </style>

    <style name="txtSplash" parent="TextAppearance.Theme.PlainText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.3</item>
    </style>

    <style name="txtSplash.version" parent="txtSplash">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <!-- general -->

    <style name="noItemsTitle" parent="TextAppearance.Theme.PlainText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.3</item>
    </style>

    <style name="actionBarTitle" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnGeneral">
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/btnPadding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_btn_general</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    


    <style name="btnGeneral.camera" parent="btnGeneral">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/btnCameraPadding</item>
    </style>

    <style name="btnGeneral.actionBar" parent="btnGeneral">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>      
    </style>

    <style name="btnGeneral.actionBar.back" parent="btnGeneral.actionBar">        
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="customCheckbox">
        <item name="android:background">@drawable/selector_togglebtn_chk</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <!-- IQA Settings -->

    <style name="txtRedHead" parent="android:TextAppearance.Theme">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/nav_menu_bkg_selected</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_margin">2dp</item>
                <item name="android:padding">2dp</item>
        
        <item name="android:singleLine">true</item>
    </style>

    <style name="txtGreyHead" parent="android:TextAppearance.Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">#ADB6BE</item>
        <item name="android:padding">4px</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txtLabelIQA" parent="android:TextAppearance.Theme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextIQA">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="inputLabeIQA">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutHalfWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
     <style name="LinearLayoutInput">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
	<style name="LinearLayoutTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
                

    <!-- login -->

    <style name="txtLabel" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txtLabel.small" parent="txtLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#656565</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txtBox" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#767676</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/txt_box</item>
    </style>

    <!-- deposits screen -->
    <style name="btnNavMenu" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_nav_menu</item>
    </style>

    <!-- list item -->
    <style name="txtListItem" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txtListItem.date" parent="txtListItem">
        <item name="android:textColor">#929292</item>
    </style>

    <style name="txtListItem.status" parent="txtListItem">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#929292</item>
    </style>

    <!-- instroduction -->
    <style name="txtIntroductionTitle" parent="android:TextAppearance.Theme">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">#d10a2a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="txtIntroductionContent" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">7</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="txtIntroductionContent.bold" parent="txtIntroductionContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- camera view -->
    <style name="txtDebugBox" parent="android:TextAppearance.Theme">
        <item name="android:background">@drawable/debug_box</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="txtDebugBox.text" parent="txtDebugBox">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="txtCapture" parent="android:TextAppearance.Theme">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/camera_capture_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="txtProcessing" parent="android:TextAppearance.Theme">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- confirmation send -->
    <style name="txtConfirmation" parent="android:TextAppearance.Theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="txtVersion" parent="android:TextAppearance.Theme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>