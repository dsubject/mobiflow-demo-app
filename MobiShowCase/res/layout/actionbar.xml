<?xml version="1.0" encoding="utf-8"?>
<com.topimagesystems.sample.DemoActionBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/demoActionBar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/actionBarHeight"
    android:background="@drawable/action_bar" >

    <Button
        android:id="@+id/btnBack"
        style="@style/btnGeneral.actionBar.back"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:height="34dp"
        android:minHeight="34dp"        
        android:paddingLeft="5dp"                
        android:text="@string/Back" />

    <!-- android:padding="@dimen/btnActionBarPadding" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="@dimen/actionBarPadding" >

        <TextView
            android:id="@+id/txtActionBarTitle"
            style="@style/actionBarTitle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:text="@string/Login" />

        <ImageView
            android:id="@+id/imgActionBarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSettings"
        style="@style/btnGeneral.actionBar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:height="32dp"
        android:minHeight="32dp"       
        android:paddingLeft="5dp"
        android:paddingRight="5dp"        
        android:text="@string/Settings" />

</com.topimagesystems.sample.DemoActionBar>