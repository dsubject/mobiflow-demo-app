<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bkg" >

    <include
        android:id="@+id/demoActionBar_ref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar" />

    <!-- content -->

    <ScrollView
        android:id="@+id/scrollBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demoActionBar_ref"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <!-- MICR -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txtImageType"
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/ImageType" />

                <Spinner
                    android:id="@+id/inputType"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
            <!-- MICR -->

            <RelativeLayout
                android:id="@+id/MicrLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txtMICR"
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/OCRType" />

                <Spinner
                    android:id="@+id/cpMICR"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/levelerLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txtLeveler"
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/levelerType" />

                <Spinner
                    android:id="@+id/levlerType"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/seekBarLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tisbinTypeId"
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:text="@string/TISBinType" />

                <Spinner
                    android:id="@+id/binarizationTypeSpinner"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/binarizationTextViewSeekBar"
                    style="@style/txtLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/binarizationTypeSpinner"
                    android:layout_marginTop="10dp" />

                <SeekBar
                    android:id="@+id/binarizationSeekBar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/binarizationTypeSpinner"
                    android:max="100" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/apectRatioMaxLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <TextView
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/aspectRatioMax" />

                <EditText
                    android:id="@+id/apectRatioMaxEt"
                    style="@style/txtBox"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/apectRatioMinLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <TextView
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/aspectRatioMin" />

                <EditText
                    android:id="@+id/apectRatioMinEt"
                    style="@style/txtBox"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/heigthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <TextView
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/heigth" />

                <EditText
                    android:id="@+id/heigthEt"
                    style="@style/txtBox"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/widthLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <TextView
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/width" />

                <EditText
                    android:id="@+id/widthEt"
                    style="@style/txtBox"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/txtValidFromLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    style="@style/txtLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/txtValidFrom" />

                <EditText
                    android:id="@+id/txtValidFrom"
