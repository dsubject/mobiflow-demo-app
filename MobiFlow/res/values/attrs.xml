<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="OneUnitsLeveler">
        <attr name="isFadeOutEnable" format="boolean" />
        <attr name="isDraggingEnable" format="boolean" />
        <attr name="levelerThickness" format="integer" />
    </declare-styleable>
    <declare-styleable name="TwoUnitsLeveler" parent="OneUnitsLeveler">
        <attr name="paddingLeftAndRight" format="dimension" />
        <attr name="paddingTopAndBottom" format="dimension" />
        <attr name="levelerLocation" format="integer">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ScaleLeveler" parent="TwoUnitsLeveler">
        <attr name="scaleUnitGap" format="dimension" />
        <attr name="userColorsInScale" format="boolean" />
    </declare-styleable>
    <declare-styleable name="captureOverlay">
        <attr name="drawGreenRectangle" format="boolean" />
        <attr name="showCurrentRectangleFound" format="boolean" />
    </declare-styleable>
    <declare-styleable name="counter">
        <attr name="counterBorderColor" format="reference" />
        <attr name="counterBackground" format="reference" />
        <attr name="counterTextColor" format="reference" />
        <attr name="counterTextSize" format="integer" />
        <attr name="countDownStartValue" format="integer" />
        <attr name="countDownStopValue" format="integer" />
        <attr name="counterFont" format="string" />
    </declare-styleable>

</resources>